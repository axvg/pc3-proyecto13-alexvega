+    exit 1
+fi
+
+CURRENT_DIR=$(pwd)
+
+cd "$MODULE_DIR"
+
+echo "Realizando rollback a version $VERSION..."
+git checkout "$TAG_NAME" -- .
+
+GREEN_START="\033[32m"
+GREEN_END="\033[0m"
+
+echo -e "${GREEN_START}Rollback del modulo $MODULE_NAME completado ok.${GREEN_END}"
+echo "Ahora el modulo $MODULE_NAME esta en version $VERSION"
+
