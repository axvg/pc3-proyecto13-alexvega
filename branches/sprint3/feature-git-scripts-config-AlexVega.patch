+#!/usr/bin/env bash
+
+set -e
+
+MODULE_NAME=$1
+
+MODULE_DIR="./modules/terraform/$MODULE_NAME"
+
+if [ ! -d "$MODULE_DIR" ]; then
+    echo "Error: Directorio del modulo no existe: $MODULE_DIR"
+    exit 1
+fi
+
+VERSION=${2:-"v0.8.0"}
+
